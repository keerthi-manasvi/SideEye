{
  "name": "sideeye-workspace-app",
  "version": "1.0.0",
  "description": "Privacy-focused biometric monitoring with intelligent workspace automation",
  "main": "build/electron.js",
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run react-dev\" \"wait-on http://localhost:3000 && electron .\"",
    "react-dev": "react-scripts start",
    "react-build": "react-scripts build",
    "build": "npm run react-build && electron-builder",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "dist-all": "npm run build && electron-builder -mwl",
    "dist-win": "npm run build && electron-builder --win",
    "dist-mac": "npm run build && electron-builder --mac",
    "dist-linux": "npm run build && electron-builder --linux",
    "publish": "npm run build && electron-builder --publish=always",
    "django-dev": "python backend/manage.py runserver 8000",
    "dev": "concurrently \"npm run django-dev\" \"npm run electron-dev\"",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "download-models": "node scripts/download-models.js",
    "setup": "npm install && npm run download-models",
    "postinstall": "node scripts/install-python-deps.js",
    "first-run-setup": "node scripts/first-run-setup.js"
  },
  "keywords": [
    "electron",
    "react",
    "django",
    "biometric",
    "workspace",
    "privacy"
  ],
  "author": "SideEye Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "electron-is-dev": "^2.0.0",
    "electron-notarize": "^1.2.2",
    "jest-axe": "^10.0.0",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@tensorflow-models/posenet": "^2.2.2",
    "@tensorflow/tfjs": "^4.2.0",
    "@testing-library/react": "^13.4.0",
    "electron-updater": "^6.6.2",
    "face-api.js": "^0.22.2",
    "node-fetch": "^2.6.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.sideeye.workspace",
    "productName": "SideEye Workspace",
    "directories": {
      "output": "dist",
      "buildResources": "build-resources"
    },
    "files": [
      "build/**/*",
      "src/main/**/*",
      "backend/**/*",
      "scripts/**/*",
      "node_modules/**/*",
      "!backend/db.sqlite3",
      "!backend/**/__pycache__/**/*",
      "!backend/**/*.pyc",
      "!backend/sideeye.log"
    ],
    "extraResources": [
      {
        "from": "public/models",
        "to": "models"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "sideeye-team",
      "repo": "sideeye-workspace-app"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build-resources/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build-resources/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build-resources/entitlements.mac.plist",
      "entitlementsInherit": "build-resources/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build-resources/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SideEye Workspace",
      "include": "scripts/installer.nsh"
    },
    "dmg": {
      "title": "SideEye Workspace ${version}",
      "icon": "build-resources/icon.icns",
      "background": "build-resources/dmg-background.png",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "afterSign": "scripts/notarize.js"
  }
}
